{
    "name": "roots/allow-svg",
    "description": "WordPress plugin to enable SVG uploads",
    "type": "wordpress-plugin",
    "license": "MIT",
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "yoast/phpunit-polyfills": "^4.0",
        "laravel/pint": "^1.24"
    },
    "autoload-dev": {
        "psr-4": {
            "AllowSvg\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "test-wp-cli": "./tests/wp-cli-test.sh",
        "test-e2e": "npx playwright test",
        "lint": "pint",
        "lint-check": "pint --test",
        "test-all": [
            "@lint-check",
            "@test",
            "@test-wp-cli"
        ]
    }
}